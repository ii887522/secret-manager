{
  "name": "@ii887522/secret-manager",
  "version": "1.1.0",
  "description": "It allows the user to save, copy, update and delete a secret for easier management without worrying about forgetting or losing secrets.",
  "main": "index.js",
  "bin": "index.js",
  "type": "module",
  "scripts": {
    "lint": "ts-standard",
    "build": "tsc --watch",
    "start": "node index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --watch",
    "deploy": "npm login && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ii887522/secret-manager.git"
  },
  "keywords": [
    "manager",
    "secret",
    "management",
    "secret-management",
    "password"
  ],
  "author": "ii887522",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ii887522/secret-manager/issues"
  },
  "homepage": "https://github.com/ii887522/secret-manager#readme",
  "ts-standard": {
    "ignore": [
      "**/*.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/readline-sync": "^1.4.4",
    "cross-env": "^7.0.3",
    "jest": "^27.3.1",
    "ts-standard": "^10.0.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@datastructures-js/binary-search-tree": "^4.3.1",
    "clipboardy": "^3.0.0",
    "readline-sync": "^1.4.10"
  }
}
